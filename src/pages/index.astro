---
import Layout from '../layouts/main.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/sections/Hero.astro';
import About from '../components/sections/About.astro';
import Projects from '../components/sections/Projects.astro';
import Skills from '../components/sections/Skills.astro';
import Contact from '../components/sections/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Alex Morgan - Full-Stack Developer & UI/UX Designer"
  description="Portfolio showcasing modern web development projects with a focus on beautiful, accessible, and performant user experiences."
>
  <!-- Skip to main content link for screen readers and keyboard navigation -->
  <a href="#main-content" class="skip-to-main">
    Skip to main content
  </a>

  <Navigation />
  <main id="main-content">
    <Hero />
    <About />
    <Projects />
    <Skills />
    <Contact />
  </main>
  <Footer />
</Layout>

<style>
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Add padding to account for fixed navigation */
  main section {
    scroll-margin-top: 4rem;
  }
</style>
