---
import ProjectCard from "../ProjectCard.astro";

const base = import.meta.env.BASE_URL;

// Dashboard UI Mockups
// To add your mockup images:
// 1. Save your images in /public/images/ with the names: dashboard-1.png (or .jpg, .webp)
// 2. Recommended image size: 800x400px (16:9 ratio)
// 3. Replace the placeholder .svg files with your actual dashboard screenshots
const projects = [
  {
    title: "Analytics Dashboard",
    description:
      "Modern analytics dashboard with real-time data visualization, interactive charts, and comprehensive reporting features for data-driven decision making.",
    techStack: ["React", "D3.js", "Tailwind", "TypeScript"],
    imageUrl: `${base}images/dashboard-1.svg`,
    projectUrl: "#",
  },
  {
    title: "Admin Control Panel",
    description:
      "Comprehensive admin interface with user management, system monitoring, and configuration controls featuring an intuitive skeuomorphic design.",
    techStack: ["Astro", "React", "Chart.js", "PostgreSQL"],
    imageUrl: `${base}images/dashboard-2.svg`,
    projectUrl: "#",
  },
  {
    title: "Project Management Hub",
    description:
      "Collaborative workspace dashboard with task tracking, team collaboration tools, and project timeline visualization in a tactile interface.",
    techStack: ["TypeScript", "Next.js", "Prisma", "WebSocket"],
    imageUrl: `${base}images/dashboard-3.svg`,
    projectUrl: "#",
  },
  {
    title: "Monitoring Dashboard",
    description:
      "Real-time system monitoring interface with server metrics, performance analytics, and alert management featuring depth-rich visualizations.",
    techStack: ["React", "Node.js", "InfluxDB", "Grafana"],
    imageUrl: `${base}images/dashboard-4.svg`,
    projectUrl: "#",
  },
];
---

<section id="projects" class="min-h-screen py-20 px-4 bg-neubg-light">
  <div class="max-w-6xl mx-auto">
    <h2
      class="text-4xl md:text-5xl font-display font-bold text-center mb-4 text-gray-800"
    >
      Featured Projects
    </h2>
    <div
      class="w-24 h-1 bg-gradient-to-r from-blue-400 to-purple-500 mx-auto mb-4 rounded-full shadow-neu-sm"
    >
    </div>
    <p class="text-center text-gray-700 mb-12 max-w-2xl mx-auto">
      A selection of my recent work showcasing my skills in full-stack
      development, UI/UX design, and modern web technologies.
    </p>

    <div class="grid md:grid-cols-2 gap-8">
      {projects.map((project) => <ProjectCard {...project} />)}
    </div>
  </div>
</section>
