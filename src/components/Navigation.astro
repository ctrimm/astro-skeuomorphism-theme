---
const navItems = [
  { label: "Home", href: "#hero" },
  { label: "About", href: "#about" },
  { label: "Projects", href: "#projects" },
  { label: "Skills", href: "#skills" },
  { label: "Contact", href: "#contact" },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-neubg/80 backdrop-blur-lg border-b border-gray-200/50">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="#hero" class="flex items-center gap-2 group">
        <div
          class="w-10 h-10 rounded-xl shadow-neu flex items-center justify-center bg-gradient-to-br from-blue-400 to-purple-500 text-white font-bold text-lg group-hover:shadow-neu-lg transition-all duration-200"
        >
          AM
        </div>
        <span class="font-display font-bold text-xl text-gray-800 hidden sm:inline">
          Alex Morgan
        </span>
      </a>

      <!-- Navigation Links -->
      <ul class="flex items-center gap-1 md:gap-2">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="px-3 md:px-4 py-2 rounded-lg text-gray-700 hover:text-gray-900 font-medium transition-all duration-200 hover:shadow-neu-sm text-sm md:text-base"
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
