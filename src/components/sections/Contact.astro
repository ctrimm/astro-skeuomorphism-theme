---
import { NeuCard } from "../skeuomorphic/NeuCard";
import { SkeuoButton } from "../skeuomorphic/Button";

const socialLinks = [
  { name: "GitHub", url: "https://github.com", icon: "github" },
  { name: "LinkedIn", url: "https://linkedin.com", icon: "linkedin" },
  { name: "Twitter", url: "https://twitter.com", icon: "twitter" },
];
---

<section id="contact" class="min-h-screen py-20 px-4 bg-neubg">
  <div class="max-w-4xl mx-auto">
    <h2
      class="text-4xl md:text-5xl font-display font-bold text-center mb-4 text-gray-800"
    >
      Get In Touch
    </h2>
    <div
      class="w-24 h-1 bg-gradient-to-r from-blue-400 to-purple-500 mx-auto mb-4 rounded-full shadow-neu-sm"
    >
    </div>
    <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
      Have a project in mind or just want to chat? I'd love to hear from you.
      Drop me a message and I'll get back to you as soon as possible.
    </p>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- Contact Form -->
      <NeuCard client:load>
        <h3 class="text-2xl font-bold text-gray-800 mb-6">Send a Message</h3>
        <form class="space-y-4">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
              Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-3 rounded-xl shadow-neu-inset bg-neubg border-none focus:outline-none focus:ring-2 focus:ring-blue-400 text-gray-800"
              placeholder="Your name"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 rounded-xl shadow-neu-inset bg-neubg border-none focus:outline-none focus:ring-2 focus:ring-blue-400 text-gray-800"
              placeholder="your.email@example.com"
            />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-4 py-3 rounded-xl shadow-neu-inset bg-neubg border-none focus:outline-none focus:ring-2 focus:ring-blue-400 text-gray-800 resize-none"
              placeholder="Your message here..."></textarea>
          </div>
          <SkeuoButton variant="primary" client:load>
            Send Message
          </SkeuoButton>
        </form>
      </NeuCard>

      <!-- Contact Info -->
      <div class="space-y-6">
        <NeuCard client:load>
          <h3 class="text-2xl font-bold text-gray-800 mb-4">
            Contact Information
          </h3>
          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <div
                class="w-12 h-12 rounded-xl shadow-neu flex items-center justify-center bg-neubg"
              >
                <svg
                  class="w-6 h-6 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-600">Email</p>
                <p class="font-medium text-gray-800">alex.morgan@example.com</p>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div
                class="w-12 h-12 rounded-xl shadow-neu flex items-center justify-center bg-neubg"
              >
                <svg
                  class="w-6 h-6 text-green-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-600">Location</p>
                <p class="font-medium text-gray-800">San Francisco, CA</p>
              </div>
            </div>
          </div>
        </NeuCard>

        <!-- Social Links -->
        <NeuCard client:load>
          <h3 class="text-2xl font-bold text-gray-800 mb-4">Connect</h3>
          <div class="flex gap-4">
            {
              socialLinks.map((link) => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-12 h-12 rounded-xl shadow-skeuo-raised hover:shadow-skeuo-lifted flex items-center justify-center bg-gradient-to-br from-blue-400 to-blue-600 text-white transition-all duration-200 hover:-translate-y-1"
                  aria-label={link.name}
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                </a>
              ))
            }
          </div>
        </NeuCard>
      </div>
    </div>
  </div>
</section>
